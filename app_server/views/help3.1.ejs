                 {
                    GameObject gameY;
                    GameObject[] gameSpheres = GameObject.FindGameObjectsWithTag("SphereBalls");
            
                    for (int i = 0; i < 8; i++)
                    {
            
                        //had at <9, forgot 0 is an part in the index,
                        //so was giving me IndexOutOfRangeException
                        //cause there was nothing at index spot 8
                        gameY = gameSpheres[i];
            
                        if (gameY.GetComponent<Renderer>().material.color == Color.green)
                        {
                            countB++;
                            countText.text = countB + "";
                            // Debug.Log("BAHHHH" + numOfSphere3);
                        }
            
                    }
                    return countB;
                }
            
            
